---
import Nav from './Nav';

interface Props {
  title?: string;
}

const { title = "Hamid - FullStack Developer Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio of Hamid, a passionate FullStack Developer specialized in MERN stack" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground font-sans antialiased">
    <Nav client:load />
    <main class="pt-16">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --background: #ffffff;
    --foreground: #000000;
  }

  [data-theme="dark"] {
    --background: #000000;
    --foreground: #ffffff;
  }

  body {
    background-color: var(--background);
    color: var(--foreground);
  }
</style>
